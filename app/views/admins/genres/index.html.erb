<div class="container">
	<div class="row" style="font-size: 30px; margin-left: 50px;">ジャンル一覧・追加</div>
	<div class="row">
	  	<% if flash[:notice] %>
	  		<p><%= flash[:notice] %></p>
	  	<% end %>
	</div>
	<div class='row'>
      <% if @genre.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@genre.errors.count, "error") %> errors prohibited this obj from being saved:</h2>

          <ul>
            <% @genre.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
	<div class="row" style="margin: 50px 0 50px 0;">
		<div class="col-lg-1">ジャンル</div>
		<%= form_for @genre, url: admins_genres_path do |f| %>
			<div class="col-lg-2"><%= f.text_field :name %></div>
			<div class="col-lg-2">
				<label><%= f.radio_button :is_active, true %> 有効</label>
				<label><%= f.radio_button :is_active, false %> 無効</label>
			</div>
			<div class="col-lg-1"><%= f.submit "追加",class: "btn btn-primary btn-block" %></div>
		<% end %>
	</div>
	<div class="row" style="margin-bottom: 20px;font-weight: bold; ">
		<div class="col-xs-2">ジャンル</div>
		<div class="col-xs-2">状態</div>
		<div class="col-xs-2"></div>
	</div>
	<div style="margin: 10px 0;">
		<% @genres.each do |genre| %>
			<div class="row" style="margin-top: 10px;">
				<div class="col-xs-2"><%= genre.name %></div>
				<div class="col-xs-2">
					<% if genre.is_active %>
						<p>有効</p>
					<% else %>
						<p>無効</p>
					<% end %>
				</div>
				<div class="col-xs-2"><%= link_to "編集する", edit_admins_genre_path(genre) %></div>
			</div>
		<% end %>
	</div>
	</div>
</div>