<div class="container">
	<div class="row">
		<div class="col-xs-12" style="margin: 20px 0;">
			<span style="background-color: silver; font-size: 20px;padding: 5px 15px;">検索結果</span>
		</div>

		<% if @range == "1" %>
			<div class="col-xs-8 col-xs-offset-2">
				<table class="table">

					<thead>
						<tr class="active">
							<th>会員ID</th>
							<th><a href="" style="color: black; text-decoration: underline;">氏名</a></th>
							<th>メールアドレス</th>
							<th>ステータス</th>
						</tr>
					</thead>

					<tbody>
						<% @customer_search.each do |customer| %>
							<tr>
								<td><%= customer.id %></td>
								<td>
									<%= link_to admins_customer_path(customer), style:"color: black; text-decoration: underline;" do %>
										<%= customer.last_name %><%= customer.first_name %>
									<% end %>
								</td>
								<td><%= customer.email %></td>
								<td>
									<% if customer.is_deleted %>
										<p>無効</p>
									<% else %>
										<p>有効</p>
									<% end %>
								</td>
							</tr>
						<% end %>
					</tbody>

				</table>
			<% else %>
				 <table class="table table-hover table-inverse">
	                <thead>
	                    <tr>
	                        <th>商品ID</th>
	                        <th>商品一覧</th>
	                        <th>税抜価格</th>
	                        <th>ジャンル</th>
	                        <th>ステータス</th>
	                    </tr>
	                </thead>

	                <% @item_search.each do |item| %>
	                    <tbody>
	                        <td><%= item.id %></td>
	                        <td><%= link_to item.name, admins_item_path(item) %></td>
	                        <td><%= item.price.to_s(:delimited, delimiter: ',') %></td>
	                        <td><%= item.genre.name %></td>
	                        <td>
	                            <% if item.is_active %>
	                                <p>販売中</p>
	                            <% else %>
	                                <p>販売停止中</p>
	                            <% end %>
	                        </td>
	                    </tbody>
	                <% end %>
	            </table>
	        <% end %>
		</div>

	</div>
</div>