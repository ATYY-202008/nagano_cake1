<div class="container">
	<div class="row">
		<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

		<!-- エラー文 -->
		<% if @customer.errors.any? %>
            <h2><%= @customer.errors.count %>件のエラーが発生しました。</h2>
            <ul>
      	         <% @customer.errors.full_messages.each do |message| %>
        	       <li><%= message %></li>
      	         <% end %>
            </ul>
  	     <% end %>
  	     <!-- エラー文 -->

		<%= form_for(@customer, url:"/admins/customers/#{@customer.id}") do |f| %>
			<!-- 会員ID -->
			<div class="row form-interval">
				<label class="col-lg-2">会員ID</label>
				<div  class="col-lg-10">
					<%= @customer.id %>
				</div>
			</div>
			<!-- 会員ID -->

			<!-- 氏名フォーム -->
			<div class="row form-interval">
	    	<label class="col-lg-2">氏名</label>
	    	<div class="col-lg-2">
	    		<%= f.text_field :last_name, autofocus: true %>
	    	</div>
	    	<div class="col-lg-3">
	    		<%= f.text_field :first_name %>
	    	</div>
    	</div>
    	<!-- 氏名フォーム -->

    	<!-- フリガナフォーム -->
    	<div class="row form-interval">
	    	<label class="col-lg-2">フリガナ</label>
	    	<div class="col-lg-2">
	    		<%= f.text_field :last_name_kana %>
	    	</div>
	    	<div class="col-lg-3">
	    		<%= f.text_field :first_name_kana %>
	    	</div>
	    </div>
	    <!-- フリガナフォーム -->

	    <!-- 郵便番号・住所フォーム -->
	    <div class="row form-interval">
    		<label class="col-lg-2">郵便番号</label>
    		<div class="col-lg-3">
    			<%= f.text_field :postal_code %>
    		</div>
    	</div>

    	<div class="row form-interval">
    		<label class="col-lg-2">住所</label>
    		<div class="col-lg-7">
    			<%= f.text_field :address, size:"48x1" %>
    		</div>
    	</div>
    	<!-- 郵便番号・住所フォーム -->

    	<!-- 電話番号・メールアドレスフォーム -->
    	<div class="row form-interval">
    		<label class="col-lg-2">電話番号</label>
    		<div class="col-lg-3">
    			<%= f.text_field :telephone_number %>
    		</div>
    	</div>

    	<div class="row form-interval">
    		<label class="col-lg-2">メールアドレス</label>
    		<div class="col-lg-3">
    			<%= f.email_field :email %>
    		</div>
    	</div>
    	<!-- 電話番号・メールアドレスフォーム -->

    	<!-- 会員ステータス -->
    	<div class="row form-interval">
    		<label class="col-lg-2">会員ステータス</label>
			<label class="col-lg-1"><%= f.radio_button :is_deleted, "false" %> 有効</label>
    		<label class="col-lg-1"><%= f.radio_button :is_deleted, "true" %> 無効</label>
    	</div>
    	<!-- 会員ステータス -->
    	
    	<div class="row form-interval">
  			<%= f.submit "変更を保存", class:"btn btn-primary" %>
  		</div>
		<% end %>
	</div>
</div>