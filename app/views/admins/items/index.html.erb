<div class="container">
    <div class="row">
        <h2 class="relative">商品一覧</h2>
    </div>
        <div class="row" style="margin-top: 30px;">
            <%= link_to new_admins_item_path, class: "col-xs-1", class: "link" do %>
                <div class="icon icon--plus">
                    <span class="icon__mark"></span>
                </div>
            <% end %>
            <div class="col-xs-10 col-xs-offset-1">
                <table class="table table-hover table-inverse">
                    <thead>
                        <tr class="active">
                            <th>商品ID</th>
                            <th>商品一覧</th>
                            <th>税抜価格</th>
                            <th>ジャンル</th>
                            <th>ステータス</th>
                        </tr>
                    </thead>

                    <% @items.each do |item| %>
                        <tbody>
                            <td><%= item.id %></td>
                            <td><%= link_to item.name, admins_item_path(item) %></td>
                            <td><%= item.price.to_s(:delimited, delimiter: ',') %></td>
                            <td><%= item.genre.name %></td>
                            <td>
                                <% if item.is_active %>
                                    <p>販売中</p>
                                <% else %>
                                    <p>販売停止中</p>
                                <% end %>
                            </td>
                        </tbody>
                    <% end %>
                </table>
            </div>
            <%= paginate @items %>
        </div>
    </div>
</div>

