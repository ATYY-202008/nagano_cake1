<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <h3>商品新規登録</h3>
                <%= attachment_image_tag @item, :item_image, :fill, 40, 40, format: 'jpeg' %>
    </div>

        <%= form_with(model:item, local: true) do |f| %>
            <div class="col-lg-3 col-lg-offset-3" >
                <div class="row">
                    <%= f.label :商品名 %>
                    <%= f.text_field :name %>
                </div>
                <div class="row">
                    <%= f.label :商品説明 %>
                    <%= f.text_area :description %>
                </div>
                <div class="row">
                    <%= f.label :ジャンル %>
                    <%= f.select :genre %>
                </div>
                <div class="row">
                    <%= f.label :税抜価格 %>
                    <%= f.text_field :price %>  
                </div>
                <div class="row">
                    <%= f.label :販売ステータス %>
                    <%= f.select :is_active%>
                </div>
            </div>

            <div class="form-group">
                <%= f.submit "新規登録", class: "btn btn-primary btn-lg" %>
            </div>
        <% end %>
</div>