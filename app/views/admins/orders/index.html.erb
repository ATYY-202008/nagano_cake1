<div class="container">
	<div class="row">
		<div class="col-xs-12" style="margin: 20px 0 0 200px;">
			<span style="background-color: silver; font-size: 20px;padding: 5px 15px;">注文履歴一覧</span>
		</div>

		<div class="col-xs-8 col-xs-offset-2" style="margin-top: 40px">
			<table class="table">

				<thead>
					<tr class="active">
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
					</tr>
				</thead>

				<tbody>
					<% @orders.each do |order| %>
						<tr>
							<td>
								<%= link_to admins_order_path(order), style:"color: black; text-decoration: underline;" do %>
									<%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
								<% end %>
							</td>
							<td><%= order.customer.last_name %><%= order.customer.first_name %></td>
							<td><%= order.order_details.sum(:amount).to_s(:delimited, delimiter: ',') %></td>
							<td>
								<% if order.status == "入金待ち" %>
									<p>入金待ち</p>
								<% elsif order.status == "入金確認" %>
									<p>入金確認</p>
								<% elsif order.status == "製作中" %>
									<p>製作中</p>
								<% elsif order.status == "発送準備中" %>
									<p>発送準備中</p>
								<% else %>
									<p>発送済み</p>
								<% end %>
							</td>
						</tr>
					<% end %>
				</tbody>

			</table>
			<%= paginate @orders %>
		</div>
	</div>
</div>