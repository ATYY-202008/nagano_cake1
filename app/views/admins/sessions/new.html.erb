<div class="container">
  <div class="row" style=" margin-left: 170px;">
    <div class="col-lg-5">
      <h2>管理者ログイン</h2>
    </div>
  </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row" style="margin-top: 20px;">
        <div class="col-lg-2 col-lg-offset-3">メールアドレス</div>
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"30" %>
            </div>
      </div>

    <div class="row" style="margin-top: 20px;">
      <div class="col-lg-2 col-lg-offset-3">パスワード</div>
        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", :size=>"30" %>
        </div>
    </div>

      <div class="actions" style="margin-top: 40px;">
        <div class="col-lg-3 col-lg-offset-5"><%= f.submit "ログイン", class: "btn btn-primary btn-lg"  %></div>
        </div>
      </div>
    <% end %>
</div>
