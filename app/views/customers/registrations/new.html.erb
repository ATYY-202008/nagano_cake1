<div class="container">
  <div class="row">
    <h2>新規会員登録</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
    <!-- -----名前----- -->
    <div class="row" style="margin-top: 20px;">
      <div class="col-lg-1 col-lg-offset-2">名前</div>
      <div class="col-lg-1 col-lg-offset-1" style="text-align: right;">(姓)</div>
      <div class="col-lg-3"><%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %></div>
      <div class="col-lg-1" style="text-align: right;">(名)</div>
      <div class="col-lg-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control" %></div>
    </div>
    <!-- -------------- -->
    <!-- -----フリガナ----- -->
    <div class="row" style="margin-top: 20px;">
      <div class="col-lg-1 col-lg-offset-2">フリガナ</div>
      <div class="col-lg-1 col-lg-offset-1" style="text-align: right;">(セイ)</div>
      <div class="col-lg-3"><%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %></div>
      <div class="col-lg-1" style="text-align: right;">(メイ)</div>
      <div class="col-lg-3"><%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %></div>
    </div>
    <!-- ------------------ -->
    <!-- -----メールアドレス----- -->
    <div class="row" style="margin-top: 20px;">
      <div class="col-lg-2 col-lg-offset-2">メールアドレス</div>
      <div class="col-lg-4" style="padding: 0 60px; margin-left: 50px;"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></div>
    </div>
    <!-- ---------------------- -->
    <!-- -----郵便番号----- -->
    <div class="row" style="margin-top: 20px;">
      <div class="col-lg-2 col-lg-offset-2">郵便番号(ハイフンなし)</div>
      <div class="col-lg-3 col-lg-offset-1"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></div>
    </div>
    <!-- ------------------ -->
    <!-- -----住所----- -->
    <div class="row" style="margin-top: 20px;">
      <div class="col-lg-2 col-lg-offset-2">住所</div>
      <div class="col-lg-7 col-lg-offset-1"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></div>
    </div>
    <!-- -------------- -->
    <!-- -----パスワード----- -->
    <div class="row" style="margin-top: 20px;">
      <div class="col-lg-2 col-lg-offset-2">
        <p>パスワード
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
        </p>
      </div>
      <div class="col-lg-3 col-lg-offset-1">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>

    <div class="row" style="margin-top: 20px;">
      <div class="col-lg-2 col-lg-offset-2"><p>パスワード(確認用)</p></div>
      <div class="col-lg-3 col-lg-offset-1"><%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %></div>
    </div>
    <!-- ------------------- -->

    <div class="actions" style="margin: 30px 0 0 490px; width: 260px; border-radius: 10px;">
      <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
    </div>
  <% end %>
  <div class="row" style="padding: 30px 0 20px 200px;">既に登録済みの方</div>
  <div class="row" style="padding-left: 200px;"><%= link_to "こちら" , new_customer_session_path %>からログインしてください</div>
</div>
