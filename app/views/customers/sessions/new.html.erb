<div class="container">
  <div class="row" style="padding: 30px 0 50px 100px;">会員の方はこちらからログイン</div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <!-- ------メールアドレス----- -->
    <div class="row">
      <div class="col-lg-2 col-lg-offset-2" style="padding-left: 80px;">
        メールアドレス<span style="margin-left: 10px;"></span>
      </div>
      <div class="col-lg-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
      </div>
    </div>
  <!-- ---------- -->

  <!-- ------パスワード------ -->
    <div class="row" style="margin-top: 20px;">
      <div class="col-lg-2 col-lg-offset-2" style="padding-left: 80px;">
        パスワード
      </div>
      <div class="col-lg-6">
        <%= f.password_field :password, autocomplete: "current-password",class: "form-control" %>
      </div>
    </div>
  <!-- ----------- -->
    <div class="row" style="text-align: right; margin: 10px 200px 20px 0;">
      <%= link_to "=>パスワードを忘れた方はこちら", new_customer_password_path %>
    </div>

    <div class="row">
      <div class="col-lg-2 col-lg-offset-4">
        <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
      </div>
    </div>
  <% end %>

  <div class="row" style="padding: 30px 0 50px 100px;">会員登録がお済みでない方</div>
  <div class="row">
    <div class="col-lg-5 col-lg-offset-2" style="padding-left: 80px;">
      <%= link_to "こちら", new_customer_registration_path %>
      から新規登録を行ってください。
    </div>
  </div>
</div>
